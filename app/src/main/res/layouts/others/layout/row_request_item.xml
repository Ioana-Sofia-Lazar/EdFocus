<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_request_profile_photo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/profile_photo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="Name" />

        <TextView
            android:id="@+id/text_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="wants to add you" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete_request"
                style="@style/ButtonCancel"
                android:layout_height="40dp"
                android:text="Decline" />

            <Button
                android:id="@+id/btn_confirm_request"
                style="@style/Button"
                android:layout_height="40dp"
                android:text="Accept" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>