<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context="com.ioanapascu.edfocus.shared.ClassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/img_class_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.3"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_placeholder" />

        <com.ioanapascu.edfocus.views.CustomIconBack
            android:id="@+id/icon_back"
            style="@style/ToolbarIcon"
            android:layout_centerVertical="false"
            android:layout_margin="16dp"
            android:tint="@color/darkGray" />

        <TextView
            android:id="@+id/text_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Class Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_class_name"
            android:layout_centerHorizontal="true"
            android:text="School Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Students -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_students"
                style="@style/ClassMenuCard">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView2"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_contact" />

                    <View
                        android:id="@+id/view2"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView2" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view2"
                        android:text="Students" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Courses -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_courses"
                style="@style/ClassMenuCard">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView3"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_classes" />

                    <View
                        android:id="@+id/view3"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView3" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view3"
                        android:text="Courses" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Schedule -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_schedule"
                style="@style/ClassMenuCard">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_schedule" />

                    <View
                        android:id="@+id/view4"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView4" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view4"
                        android:text="Schedule" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Events -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_events"
                style="@style/ClassMenuCard">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView5"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_events" />

                    <View
                        android:id="@+id/view5"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView5" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view5"
                        android:text="Events" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Files -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_files"
                style="@style/ClassMenuCard">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView7"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_files" />

                    <View
                        android:id="@+id/view7"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView7" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view7"
                        android:text="Files" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Settings -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_settings"
                style="@style/ClassMenuCard"
                android:layout_marginBottom="15dp">

                <RelativeLayout style="@style/ClassMenuCardRL">

                    <ImageView
                        android:id="@+id/imageView6"
                        style="@style/ClassMenuCardIV"
                        android:src="@drawable/ic_settings" />

                    <View
                        android:id="@+id/view6"
                        style="@style/ClassMenuCardSeparator"
                        android:layout_toEndOf="@+id/imageView6" />

                    <TextView
                        style="@style/ClassMenuCardTV"
                        android:layout_toEndOf="@+id/view6"
                        android:text="Settings" />

                    <ImageView style="@style/ClassMenuCardIcon" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
