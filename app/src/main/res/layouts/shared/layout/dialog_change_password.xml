<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context="com.ioanap.classbook.shared.SearchActivity">

    <ImageView
        android:id="@+id/img_cancel"
        style="@style/Icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_x_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/ActivityTitle"
            android:text="Change password"
            android:textColor="@color/cyan" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="Old password" />

        <EditText
            android:id="@+id/txt_old_pass"
            style="@style/FormFieldInput"
            android:hint=""
            android:inputType="textPassword" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="New password" />

        <EditText
            android:id="@+id/txt_new_pass"
            style="@style/FormFieldInput"
            android:hint=""
            android:inputType="textPassword" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="Confirm password" />

        <EditText
            android:id="@+id/txt_confirm_pass"
            style="@style/FormFieldInput"
            android:hint=""
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/Button"
            android:text="Confirm" />
    </LinearLayout>

</RelativeLayout>
