<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    android:orientation="vertical"
    tools:context="com.ioanap.classbook.shared.EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/ActivityTitle"
                android:text="Settings" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            style="@style/TextBig"
            android:text="Privacy Options"
            android:textColor="@color/cyan"
            android:textSize="15sp" />

        <!-- Address setting -->
        <TextView
            style="@style/TextNormal"
            android:layout_marginTop="15dp"
            android:text="People who can see your email address"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />

        <!-- Switch and options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_email_nobody"
                style="@style/TextNormal"
                android:text="Nobody"
                android:textColor="@color/lightGray" />

            <Switch
                android:id="@+id/switch_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:checked="true" />

            <TextView
                android:id="@+id/text_email_contacts"
                style="@style/TextNormal"
                android:text="My Contacts" />
        </LinearLayout>

        <View
            style="@style/HorizontalSeparator"
            android:layout_height="0.5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/lightGray" />

        <!-- Location setting -->
        <TextView
            style="@style/TextNormal"
            android:text="People who can see your location"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />

        <!-- Switch and options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_location_nobody"
                style="@style/TextNormal"
                android:text="Nobody"
                android:textColor="@color/lightGray" />

            <Switch
                android:id="@+id/switch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:checked="true" />

            <TextView
                android:id="@+id/text_location_contacts"
                style="@style/TextNormal"
                android:text="My Contacts" />
        </LinearLayout>

        <View
            style="@style/HorizontalSeparator"
            android:layout_height="0.5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/lightGray" />

        <!-- Phone setting -->
        <TextView
            style="@style/TextNormal"
            android:text="People who can see your phone number"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />

        <!-- Switch and options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_phone_nobody"
                style="@style/TextNormal"
                android:text="Nobody"
                android:textColor="@color/lightGray" />

            <Switch
                android:id="@+id/switch_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:checked="true" />

            <TextView
                android:id="@+id/text_phone_contacts"
                style="@style/TextNormal"
                android:text="My Contacts" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        style="@style/HorizontalSeparator"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightGray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            style="@style/TextBig"
            android:layout_marginTop="10dp"
            android:text="Account"
            android:textColor="@color/cyan"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextNormal"
                android:layout_marginTop="15dp"
                android:text="Password"
                android:textColor="@color/darkGray"
                android:textSize="18sp" />

            <TextView
                style="@style/TextNormal"
                android:text="Change your password" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>