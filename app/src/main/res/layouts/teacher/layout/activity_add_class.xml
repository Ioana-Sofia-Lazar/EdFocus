<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context="com.ioanapascu.edfocus.teacher.AddClassActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ioanapascu.edfocus.views.CustomIconBack
                android:id="@+id/image_cancel"
                style="@style/ToolbarIcon" />

            <TextView
                android:id="@+id/text_title"
                style="@style/ActivityTitle"
                android:text="Add a New Class" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/photo_placeholder" />

            <TextView
                android:id="@+id/txt_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="Change Photo"
                android:textStyle="bold" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="Class Name" />

            <EditText
                android:id="@+id/txt_name"
                style="@style/FormFieldInput"
                android:ems="10"
                android:hint="Class Name" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="School" />

            <EditText
                android:id="@+id/txt_school"
                style="@style/FormFieldInput"
                android:ems="10"
                android:hint="School Name" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="Description" />

            <EditText
                android:id="@+id/txt_description"
                style="@style/FormFieldInput"
                android:hint="Class Description"
                android:inputType="textMultiLine" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="Token" />

            <LinearLayout
                android:id="@+id/layout_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_token"
                    style="@style/FormFieldInput"
                    android:focusable="false"
                    android:text="ABCDEF" />

                <ImageView
                    android:id="@+id/img_copy_icon"
                    style="@style/Icon"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_copy" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_info"
                style="@style/InfoTextSmall"
                android:text="@string/new_class_token_info" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_delete"
                    style="@style/Button"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btn_create"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/lightGray" />

                <Button
                    android:id="@+id/btn_create"
                    style="@style/Button"
                    android:layout_centerHorizontal="true"
                    android:text="Add" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
