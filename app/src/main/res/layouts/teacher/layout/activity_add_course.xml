<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ioanap.classbook.teacher.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:minHeight="?attr/actionBarSize"

        android:navigationIcon="@drawable/back"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_back"
                style="@style/ToolbarIcon" />

            <TextView
                style="@style/ActivityTitle"
                android:layout_toRightOf="@+id/image_cancel"
                android:text="Add a New Class" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/FormFieldTitle"
                android:text="Course Name" />

            <EditText
                android:id="@+id/txt_name"
                style="@style/FormFieldInput"
                android:hint="" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="Teacher's Name" />

            <EditText
                android:id="@+id/txt_teacher"
                style="@style/FormFieldInput"
                android:hint="" />

            <TextView
                style="@style/FormFieldTitle"
                android:text="Description" />

            <EditText
                android:id="@+id/txt_description"
                style="@style/FormFieldInput"
                android:hint="" />

            <Button
                android:id="@+id/btn_create"
                style="@style/Button"
                android:text="Add" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
