<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ioanap.classbook.teacher.ClassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/img_class_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.3"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_placeholder" />

        <ImageView
            android:id="@+id/img_back"
            style="@style/ToolbarIcon"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:tint="@color/gray" />

        <TextView
            android:id="@+id/txt_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Class Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_class_name"
            android:layout_centerHorizontal="true"
            android:text="School Name"
            android:textSize="16sp" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3">

        <!-- Students -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_students"
            style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@mipmap/ic_contact" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Students" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Courses -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_courses"
            style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/ic_contact" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Courses" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Schedule -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_schedule"
            style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/ic_contact" />

                <TextView
                    style="@style/ClassMenuCardTV"
                    android:text="Schedule" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--  -->
        <android.support.v7.widget.CardView style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/ic_contact" />

                <TextView style="@style/ClassMenuCardTV" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--  -->
        <android.support.v7.widget.CardView style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/ic_contact" />

                <TextView style="@style/ClassMenuCardTV" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--  -->
        <android.support.v7.widget.CardView style="@style/ClassMenuCard">

            <LinearLayout style="@style/ClassMenuCardLL">

                <ImageView
                    style="@style/ClassMenuCardIV"
                    android:src="@drawable/ic_contact" />

                <TextView style="@style/ClassMenuCardTV" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>
