<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context="com.ioanapascu.edfocus.shared.SearchActivity">

    <ImageView
        android:id="@+id/img_cancel"
        style="@style/Icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_x_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/ActivityTitle"
            android:text="New Course Info"
            android:textColor="@color/cyan" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            style="@style/FormFieldLayout"
            android:hint="Course Name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_name"
                style="@style/FormFieldText"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_teacher"
            style="@style/FormFieldLayout"
            android:hint="Teacher's Name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_teacher"
                style="@style/FormFieldText"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_description"
            style="@style/FormFieldLayout"
            android:hint="Description">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_description"
                style="@style/FormFieldText"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minLines="1"
                android:scrollbars="none" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_create"
            style="@style/Button"
            android:text="Add" />
    </LinearLayout>

</RelativeLayout>
