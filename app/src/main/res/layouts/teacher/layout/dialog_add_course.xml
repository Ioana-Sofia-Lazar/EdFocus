<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context="com.ioanap.classbook.teacher.SearchActivity">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_x_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/ActivityTitle"
            android:text="New Course Info"
            android:textColor="@color/cyan" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="Course Name" />

        <EditText
            android:id="@+id/txt_name"
            style="@style/FormFieldInput"
            android:hint="" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="Teacher's Name" />

        <EditText
            android:id="@+id/txt_teacher"
            style="@style/FormFieldInput"
            android:hint="" />

        <TextView
            style="@style/FormFieldTitle"
            android:text="Description" />

        <EditText
            android:id="@+id/txt_description"
            style="@style/FormFieldInput"
            android:hint="" />

        <Button
            android:id="@+id/btn_create"
            style="@style/Button"
            android:text="Add" />
    </LinearLayout>

</RelativeLayout>
