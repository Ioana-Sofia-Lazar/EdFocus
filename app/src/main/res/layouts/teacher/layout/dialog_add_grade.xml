<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context="com.ioanap.classbook.teacher.SearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/text_title"
                style="@style/TextBig"
                android:layout_gravity="center_horizontal"
                android:text="Add grade" />

            <TextView
                android:id="@+id/text_course"
                style="@style/FormFieldTitle"
                android:text="Choose a course:" />

            <Spinner
                android:id="@+id/spinner_courses"
                style="@style/Spinner" />

            <TextView
                style="@style/FormFieldTitle"
                android:layout_margin="0dp"
                android:text="Grade:" />

            <EditText
                android:id="@+id/text_grade"
                style="@style/FormFieldInput"
                android:hint="E.g 10 or A+" />

            <TextView
                style="@style/FormFieldTitle"
                android:layout_margin="0dp"
                android:text="Date:" />

            <DatePicker
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TextView
                style="@style/FormFieldTitle"
                android:layout_margin="0dp"
                android:text="Grade name:" />

            <EditText
                android:id="@+id/text_name"
                style="@style/FormFieldInput"
                android:hint="E.g Homework or Test" />

            <TextView
                style="@style/FormFieldTitle"
                android:layout_margin="0dp"
                android:text="Description/notes:" />

            <EditText
                android:id="@+id/text_description"
                style="@style/FormFieldInput"
                android:hint="Additional notes" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_delete"
                    style="@style/Button"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/lightGray" />

                <Button
                    android:id="@+id/btn_create"
                    style="@style/Button"
                    android:layout_centerHorizontal="true"
                    android:text="Add" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_cancel"
        style="@style/Icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_x_cancel" />

</RelativeLayout>
