<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/pureWhite</item>
        <item name="android:textColor">@color/gray</item>

        <!--  Action mode overlays toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  Custom Action Mode Background Color/Drawable -->
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_x_cancel_white</item>
        <item name="android:actionModeBackground">@color/lightCyan</item>
        <item name="listPreferredItemHeightSmall">50dp</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <!--
        <item name="android:textViewStyle">@style/MontserratTextViewStyle</item>
        <item name="buttonStyle">@style/MontserratButtonStyle</item>
        <item name="android:editTextStyle">@style/MontserratEditTextStyle</item>-->
    </style>

    <!-- Fonts -->
    <style name="MontserratTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MontserratButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MontserratEditTextStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarIcon</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Icons -->
    <style name="Icon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="IconInline">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- White Edit Text -->
    <style name="EditTextWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/pureWhite</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_toolbar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:elevation">@dimen/toolbarElevation</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:tint">@color/pureWhite</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ActivityTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="FabButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/coral</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:tint">@color/pureWhite</item>
    </style>

    <!-- Form -->
    <style name="FormFieldTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="FormFieldInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TimePicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:layout_margin">-32dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Separator lines -->
    <style name="VerticalSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--  Text -->
    <style name="TextNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="TextVeryBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="InfoTextSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:backgroundTint">@color/cyan</item>
    </style>

    <style name="ButtonCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:backgroundTint">@color/lightGray</item>
    </style>

    <!-- Class Activity Menu -->
    <style name="ClassMenuCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/cyan</item>
    </style>

    <style name="ClassMenuCardLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ClassMenuCardIV">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:tint">@color/pureWhite</item>
    </style>

    <style name="ClassMenuCardTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">19sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Schedule Tabs -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">@drawable/gradient_toolbar</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/coral</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Search Box -->
    <style name="SearchBoxEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Drawer Menu -->
    <style name="DrawerMenuItem">
        <item name="android:layout_margin">35dp</item>
    </style>

    <!---->
    <style name="AlertDialogPositiveButton">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="AlertDialogNegativeButton">
        <item name="android:textColor">@color/coral</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

</resources>
